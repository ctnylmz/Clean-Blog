@model CleanBlog.ViewModels.PageVM

@{
    ViewData["Title"] = "Hakkımda";

    string pageThumbnail = "";

    if(Model.ThumbnailUrl == null)
    {
        pageThumbnail = "/Template/assets/img/about-bg.jpg";
    }
    else
    {
        pageThumbnail = Model.ThumbnailUrl;
    }
}

<header class="masthead" style="background-image: url('/thumbnails/@pageThumbnail')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1>@Html.Raw(Model.Title)</h1>
                    <span class="subheading">@Html.Raw(Model.Title)</span>
                </div>
            </div>
        </div>
    </div>
</header>

<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                @Model.Description
            </div>
        </div>
    </div>
</main>>
